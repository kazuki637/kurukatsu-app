rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // プロフィール画像
    match /profile_images/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // プロフィール画像（ファイル名なしの場合も対応）
    match /profile_images/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // サークル関連画像
    match /circle_images/{circleName}/icons/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /circle_images/{circleName}/headers/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /circle_images/{circleName}/events/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /circle_images/{circleName}/activities/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // 学生証画像
    match /student_ids/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
} 